{{#if showHeader}}
  <header>
    {{#if config.showTitle}}
      <h2>{{config.title}}</h2>
    {{/if}}

    {{#if config.showNav}}
    <nav>
      <ul>
        <li>
          {{#link-to "index"}}{{config.links.blogHome}}{{/link-to}}
        </li>
        <li>
          {{#link-to "posts"}}{{config.links.allBlogPosts}}{{/link-to}}
        </li>
      </ul>
    </nav>
    {{/if}}
  </header>
{{/if}}

<section>
  {{outlet}}
</section>
