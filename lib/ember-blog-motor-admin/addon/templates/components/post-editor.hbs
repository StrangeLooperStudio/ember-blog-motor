<h3>New</h3>
<div class="post-editor">
  <div class="post-editor__editor">
    Author: {{post.author.name}}<br/>
    Title:<br/>
    {{input value=post.title}}<br />
    Body:<br/>
    {{textarea value=post.body}}<br/>
    Published: {{post.publishedAt}}
  </div>
  <div class="post-editor__preview">
    <h3>{{post.title}}</h3>
    {{markdown-to-html post.body}}
  </div>
</div>
