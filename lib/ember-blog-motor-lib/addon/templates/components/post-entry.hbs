<header>
  <h2>{{post.title}}</h2>
  <h3 class="post-entry__author">{{post.author.name}}</h3>
  <h3 class="post-entry__published-date-time">{{moment-format post.publishedAt dateFormat}}</h3>
</header>
<section>{{markdown-to-html post.body}}</section>
<footer>
  <ul>
    <li>
      {{#if post.previousPost}}
        {{#link-to "posts.show" post.previousPost.post_slug}}Previous{{/link-to}}
      {{/if}}
    </li>
    <li>
      {{#if post.nextPost}}
        {{#link-to "posts.show" post.nextPost.post_slug}}Next{{/link-to}}
      {{/if}}
    </li>
  </ul>
</footer>
